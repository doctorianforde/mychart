rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the requester is staff
    function isStaff() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'staff';
    }

    // Helper function to check if the requester is the owner of the data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users Collection (Profiles)
    match /users/{userId} {
      // Staff can access all; Patients can only access their own
      allow read, write: if isStaff() || isOwner(userId);
    }

    // Patient Data/Records
    match /records/{recordId} {
      // Staff can read/write everything.
      // Patients can create records for themselves.
      allow create: if isStaff() || (request.auth != null && request.resource.data.patientId == request.auth.uid);
      // Staff can read everything.
      // Patients can read their own records.
      // Patients can update/delete their own records.
      allow read, update, delete: if isStaff() || (request.auth != null && resource.data.patientId == request.auth.uid);
    }
  }
}
